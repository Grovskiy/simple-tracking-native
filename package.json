{
  "name": "calorie-tracker-vanilla",
  "version": "1.0.0",
  "description": "Calorie tracker using Web Components and Supabase",
  "scripts": {
    "start": "serve .",
    "dev": "concurrently \"serve .\" \"tailwindcss -i ./src/styles/input.css -o ./assets/css/styles.css --watch\"",
    "build": "tailwindcss -i ./src/styles/input.css -o ./assets/css/styles.css --minify && workbox generateSW workbox-config.js"
  },
  "dependencies": {},
  "devDependencies": {
    "concurrently": "^8.2.2",
    "serve": "^14.2.0",
    "tailwindcss": "^4.0.0",
    "workbox-cli": "^7.0.0"
  }
}
